<h1> <%= @post.title %> </h1>
<p> <%= @post.content %> </p>

<ul>
    <% @comments.each do |comment| %>
    <li>
      <div>From <%= comment.name %> (<%= comment.email %>)</div>
      <p> <%= comment.content %> </p>
    </li>
    <% end %>

<% comment = @post.comments.build %>

<%= form_for [@post, comment], html: {class: 'form form-horizontal'} do |f| %>
  <%= f.label :name, 'Name*' %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br/>

  <%= f.label :content %>
  <%= f.text_area :content, size: '20x10' %><br/><br/>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
